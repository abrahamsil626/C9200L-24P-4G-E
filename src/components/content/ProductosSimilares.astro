---
import productos_similares from "../../config/similares_cisco_C9200L-24P-4G-E.json";
---

<!-- PRODUCTOS SIMILARES A ESTE  -->
<section class="py-8 bg-gray-50">
    <div class="container mx-auto px-4 max-w-6xl">
        <!-- Encabezado -->
        <div class="text-center mb-8">
            <h2
                class="text-2xl md:text-3xl font-bold text-white bg-[#049FD9] py-4 px-6 rounded-lg shadow-md inline-block"
            >
                Tambi√©n Disponible: Cisco Catalyst 9200 en stock
            </h2>
        </div>

        <!-- Grid de productos -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
            <!-- Lista de Productos -->
            {
                productos_similares.map((prod) => (
                    <a
                        href={prod.ruta_link}
                        class="group bg-white rounded-xl shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300 border border-gray-200 hover:border-blue-500"
                    >
                        <div class="p-5 flex flex-col h-full">
                            <div class="grow flex items-center justify-center mb-4 h-40">
                                <img
                                    src={prod.ruta_imagen}
                                    alt={prod.alt_imagen}
                                    class="max-h-full max-w-full object-contain transition-transform duration-300 group-hover:scale-105"
                                />
                            </div>
                            <div class="border-t pt-4">
                                <div class="flex justify-between flex-col items-center mb-2">
                                    <h3 class="text-lg font-bold text-gray-800">
                                        {prod.titulo_producto}
                                    </h3>
                                </div>
                                <p class="text-sm text-gray-600 mt-2 group-hover:text-gray-800 transition-colors line-clamp-2">
                                    {prod.descripcion_producto}
                                </p>
                                <div class="text-center mt-6 text-blue-600 font-semibold">
                                    Ver Producto
                                </div>
                            </div>
                        </div>
                    </a>
                ))
            }
        </div>
    </div>
</section>
